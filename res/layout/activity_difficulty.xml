<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#336699" >
    
    <TextView
        android:id="@+id/diffLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#336699"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Difficulty"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="42sp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#BBFFFFFF"
        android:orientation="vertical" >

    <ToggleButton
        android:id="@+id/easyDiff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:background="@drawable/toggle_selector"
        android:text="Easy"
        android:textOff="Easy"
        android:textOn="Easy"
        android:textSize="35sp"
        android:color="#336699" />

    <ToggleButton
        android:id="@+id/mediumDiff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:background="@drawable/toggle_selector"
        android:text="Medium"
        android:textOff="Medium"
        android:textOn="Medium"
        android:textSize="35sp"
        android:color="#336699" />

    <ToggleButton
        android:id="@+id/hardDiff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:background="@drawable/toggle_selector"
        android:text="Hard"
        android:textOff="Hard"
        android:textOn="Hard"
        android:textSize="35sp"
        android:color="#336699" />
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="#BBFFFFFF"
        android:orientation="vertical" >

    <Button
        android:id="@+id/diffNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:text="Next"
        android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>